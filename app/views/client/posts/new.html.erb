<% if @errors  %>
  <ul>
    <% @errors.each do |error| %>
    <li>
      <%= error %>
    </li>
    <% end %>
  </ul>
<% end %>

<%= form_tag "/client/posts", method: :post do %>
  <div>
    Title: <input type="text" name="title" value="<%= @post['title'] %>" />
  </div>
  <div>
    Content: <input type="text" name="content" value="<%= @post['content'] %>"/>
  </div>
  <div>
    Latitude: <input type="text" name="latitude" value="<%= @post['latitude'] %>"/>
  </div>
  <div>
    Longitude: <input type="text" name="longitude" value="<%= @post['longitude'] %>">
  </div>
  <div>
    City: <input type="text" name="city" value="">
  </div>

  <div>
    Tags: <input type="text" name="tags" value=""> (separate by commas and spaces)
  </div>

  <input type="submit" name="" value="Create Post" />
<% end %>