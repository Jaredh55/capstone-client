<% if @errors  %>
  <ul>
    <%= @errors.each do |error| %>
    <li>
      <%= error %>
    </li>
    <% end %>
  </ul>
<% end %>


<%= form_tag "/client/posts/#{@post['post_id']}", method: :patch do %>
  <div>
    Title: <input type="text" name="title" value="<%= @post["title"] %>" />
  </div>
  <div>
    Content: <input type="text" name="content" value="<%= @post["content"] %>" />
  </div>
  <div>
    Latitude: <input type="text" name="latitude" value="<%= @post["latitude"] %>" />
  </div>
  <div>
    Longitude: <input type="text" name="longitude" value="<%= @post["longitude"] %>">
  </div>
  <div>
    City: <input type="text" name="city" value="<%= @post["city"]["name"] %>">
  </div>
  <div>
    Country: <input type="text" name="country" value="<%= @post["country"]["name"] %>">
  </div>
  <div>
    Tags: <input type="text" name="tags" value="<%= @post["show_tags"] %>"> (separate by commas and spaces)
  </div>
  <input type="submit" name="" value="Update Post"/>
<% end %>

